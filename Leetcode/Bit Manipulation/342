class Solution {
public:
    bool isPowerOfFour(int n) {
         if(n<=0)
   {
    return false;
   }
   if(__builtin_popcount(n)!=1)
   {
    return false;
   }
   for(int i=0;i<32;i++)
   {
        if((n>>i)&1)
        {
            if(i&1)
            {
                return false;
            }
            else 
            {
                return true;
            }
        }
   }
        return 0;

    }     
    
};
