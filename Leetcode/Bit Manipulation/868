class Solution {
public:
    int binaryGap(int n) {
        if(__builtin_popcount(n)==1 || __builtin_popcount(n)==0) return 0;
   vector<int>bit;
   for(int i=31;i>=0;i--) if((n>>i)&1) bit.push_back(i);
    int mx=0;
    for(int i=0;i<__builtin_popcount(n)-1;i++) mx=max(mx,bit[i]-bit[i+1]);
        return mx;
        
    }
    
};
