#include<bits/stdc++.h>
using namespace std;
#define nn int
#define dd double
#define ll long long int
#define ss string
int main()
{
     ll tt;
     cin>>tt;
     while(tt--)
     {
         ll x;
         cin>>x;
        ll  arr[x+1];
         for(int i=0;i<x;i++) cin>>arr[i];
         sort(arr,arr+x);
         cout<<arr[0]*(x-1)<<endl;

     }



}
