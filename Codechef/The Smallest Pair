#include<bits/stdc++.h>
using namespace std;
int main()
{
    int tt;
    cin>>tt;
    while(tt--)
    {
        int x,a;
        vector<int>v;
        cin>>x;
        for(int i=0;i<x;i++)
        {
            cin>>a;
            v.push_back(a);
        }
        sort(v.begin(),v.end());
        cout<<v[0]+v[1]<<endl;
    }
}
