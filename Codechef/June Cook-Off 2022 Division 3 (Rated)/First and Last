#include<bits/stdc++.h>
using namespace std;
#define nn int
#define dd double
#define ll long long int
#define ss string
#define nl '\n'
void code()
{
      nn n;
      cin>>n;
      vector<ll>v(n);
      for(nn i=0;i<n;i++) cin>>v[i];
        ll sum=v[0]+v[n-1];
    for(nn i=0;i<n-1;i++) sum=max(sum,v[i]+v[i+1]);
        cout<<sum<<nl;
}
int main()
{
     #ifndef ONLINE_JUDGE
     freopen("input.txt", "r", stdin);
     freopen("outputt.txt", "w", stdout);
     #endif
     nn tt;
     cin>>tt;
     while(tt--) code();
}
