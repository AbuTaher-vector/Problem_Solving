#include<bits/stdc++.h>
using namespace std;
#define nn int
#define dd double
#define ll long long int
#define ss string
#define nl '\n'
int main()
{
   nn n,a=0,b=0;
   cin>>n;
   nn arr[n+1];
   for(nn i=0;i<n;i++)
   {
     cin>>arr[i];
     if(i%2==0) a+=arr[i];
     else b+=arr[i];

   } 
   cout<<2*min(a,b)<<nl;


}
