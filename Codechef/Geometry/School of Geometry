#include<bits/stdc++.h>
using namespace std;
#define nn int
#define dd double
#define ll long long int
#define ss string
#define nl '\n'
void code()
{
     nn n;
     cin>>n;
     vector<nn>a(n),b(n);
     for(nn i=0;i<n;i++) cin>>a[i];
      for(nn i=0;i<n;i++) cin>>b[i];
        sort(a.begin(),a.end());
      sort(b.begin(),b.end());
      ll ans=0;
      for(nn i=0;i<n;i++) ans+=min(a[i],b[i]);

        cout<<ans<<nl;
}
int main()
{
  
     nn n;
     cin>>n;
     while(n--) code();
}
