#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
    ll tt;
    cin>>tt;
    while(tt--)
    {
        ll x,y,a,sum=0;
        cin>>x>>y;
        for(ll i=0;i<x;i++)
        {
            cin>>a;
            sum+=a;
        }
        cout<<sum/y+1<<endl;
    }
}
