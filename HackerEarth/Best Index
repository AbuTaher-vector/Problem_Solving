#include<bits/stdc++.h>
using namespace std;
#define nn int
#define dd double
#define ll long long int
#define ss string
int main()
{

    ll tt,mx=-10000000;
    cin>>tt;
    ll arr[tt+2];
    arr[0] = 0 ;
    for(nn i=1;i<=tt;i++)
    {
        cin>>arr[i];
        arr[i] += arr[i-1];
    }
    for(nn i=1;i<=tt;i++)
    {
        nn cnt=1,index=i; ll sum=0;
        while(cnt+index<tt)
        {
            cnt++;
            index+=cnt;
        }
        sum=arr[index]-arr[i-1];
        mx=max(sum,mx);

    }
   cout<<mx<<endl;

}
