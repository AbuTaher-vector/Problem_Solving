#include "bits/stdc++.h"
using namespace std;
void code(){
	long long int n;
	cin>>n;
	long long int k = n*(n-1)%1000000007;
	for(int i=n;i>1;i--){
		k = (k*i)%1000000007;
	}
	cout<<k<<"\n";

}
int main(){
	int tt;
	cin>>tt;
	while(tt--) code();
}

// Link : https://codeforces.com/problemset/problem/1777/B
