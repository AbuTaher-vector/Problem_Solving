#include<bits/stdc++.h>
using namespace std;
void code(){
  int n;
  string s;
  cin>>n>>s;
  int right=0,left=0;
  int ans=1,cnt=1;
  for(int i=1;i<n;i++){
      if(s[i]!=s[i-1]) cnt=1;
      else cnt++;
      ans=max(ans,cnt);

  }
  cout<<ans+1<<"\n";

}
int main(){
  int tt;
  cin>>tt;
  while(tt--) code();
}
