#include "bits/stdc++.h"
using namespace std;
void code(){
	int n;
	cin>>n;
	int x=n*2,y=2;
	int k = n/2;
    for(int i=1;i<=k;i++){
    	if(i>1) cout<<" ";
    	cout<<x<<" "<<y;
    	x-=2,y+=2;
    }
    cout<<"\n";
    x=1,y--;
    for(int i=1;i<=k;i++){
    	if(i>1) cout<<" ";
       cout<<x<<" "<<y;
       x+=2,y+=2;
    }
    cout<<"\n";
}
int main(){
	int tt;
	cin>>tt;
	while(tt--) code();
}  
