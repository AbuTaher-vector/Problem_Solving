#include "bits/stdc++.h"
using namespace std;
void code(){
    int n;
    cin>>n;
    vector<long long int>v(n);
    for(int i=0;i<n;i++) cin>>v[i];
      sort(v.begin(),v.end());
    long long int sum=1;
    if(v[0]>1){
      cout<<"NO\n";
      return;
    }
    for(int i=1;i<n;i++){
        if(v[i]>sum){
          cout<<"NO\n";
          return;
        }
        sum+=v[i];
    }
    cout<<"YES\n";
}
int main(){
	int tt;
	cin>>tt;
	while(tt--) code();
} 
